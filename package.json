{
  "name": "bignum",
  "version": "0.0.1",
  "description": "128 and 256 bits integer and fixed point arithmetics. Also support checking overflow/underflow",
  "main": "js/index.js",
  "author": "MaxGraey <maxgraey@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build:debug": "asc assembly/index.ts -b build/debug/bignum.wasm -t build/debug/bignum.wat --sourceMap --validate",
    "build:release": "asc assembly/index.ts -b build/release/bignum.wasm -t build/release/bignum.wat -O3 --sourceMap --validate --optimize --noDebug",
    "build:wasm": "yarn build:debug && yarn build:release"
  },
  "devDependencies": {
    "assemblyscript": "AssemblyScript/assemblyscript",
    "chalk": "^2.4.1"
  }
}
