{
  "name": "bignum",
  "version": "0.0.1",
  "description": "128 and 256 bits integer and fixed point arithmetics. Also support checking overflow/underflow",
  "main": "js/index.js",
  "author": "MaxGraey <maxgraey@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build:debug": "npx asc assembly/index.ts -b build/debug/bignum.wasm -t build/debug/bignum.wat --sourceMap --validate",
    "build:release": "npx asc assembly/index.ts -b build/release/bignum.wasm -t build/release/bignum.wat -O3 --sourceMap --validate --optimize --noAssert --noDebug",
    "build:wasm": "yarn build:debug && yarn build:release",
    "build:test:u128": "npx asc tests/assembly/u128.spec.as.ts -b tests/build/u128.wasm -t tests/build/u128.wat --validate --sourceMap --importMemory",
    "build:test:safe_u128": "npx asc tests/assembly/safe_u128.spec.as.ts -b tests/build/safe_u128.wasm -t tests/build/safe_u128.wat --validate --sourceMap --importMemory",
    "build:test": "yarn build:test:u128 && yarn build:test:safe_u128",
    "build": "yarn build:wasm",
    "test": "yarn build:test && ava -v",
    "test:ci": "yarn build:test && ava --fail-fast"
  },
  "devDependencies": {
    "@types/node": "^10.9.4",
    "assemblyscript": "github:AssemblyScript/assemblyscript#6949cf9f9e27afc3de5681b10ab971e5cd596458",
    "ava": "^1.0.0-beta.8",
    "ts-node": "^7.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "ava": {
    "compileEnhancements": true,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "tests/**/*.spec.ts"
    ]
  }
}
